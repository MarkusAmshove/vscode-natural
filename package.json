{
  "name": "vscode-natural",
  "displayName": "VSCode Natural",
  "description": "Language Server Client for Natural driven by natls",
  "version": "0.9.2",
  "publisher": "markusamshove",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/markusamshove/vscode-natural"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:natural",
    "workspaceContains:.natural"
  ],
  "dependencies": {
    "vscode-languageclient": "^8.0.0"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "natural",
        "aliases": [
          "natural"
        ],
        "extensions": [
          ".NSN",
          ".NSL",
          ".NSP",
          ".NSS",
          ".NSA",
          ".NSC",
          ".NS7",
          ".NSG",
          ".NSH",
          ".NSM",
          ".NST",
          ".NSD",
          ".ERR"
        ],
        "filenames": [
          ".natural"
        ],
        "configuration": "./natural/natural.configuration.json",
        "icon": {
          "dark": "images/natural-dark.png",
          "light": "images/natural-light.png"
        }
      }
    ],
    "commands": [
      {
        "command": "natural.file.new.subprogram",
        "title": "New Subprogram"
      },
      {
        "command": "natural.file.new.program",
        "title": "New Program"
      },
      {
        "command": "natural.file.new.copycode",
        "title": "New Copycode"
      },
      {
        "command": "natural.file.new.function",
        "title": "New Function"
      },
      {
        "command": "natural.file.new.gda",
        "title": "New GDA"
      },
      {
        "command": "natural.file.new.lda",
        "title": "New LDA"
      },
      {
        "command": "natural.file.new.pda",
        "title": "New PDA"
      },
      {
        "command": "natural.file.new.subroutine",
        "title": "New Subroutine"
      },
      {
        "command": "natural.file.new.testcase",
        "title": "New NatUnit Testcase"
      }
    ],
    "submenus": [
      {
        "id": "natural.file.new",
        "label": "New Natural file"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "natural.file.new",
          "group": "2_main@1"
        }
      ],
      "natural.file.new": [
        {
          "command": "natural.file.new.subprogram",
          "group": "1mod@1"
        },
        {
          "command": "natural.file.new.subroutine",
          "group": "1mod@2"
        },
        {
          "command": "natural.file.new.function",
          "group": "1mod@3"
        },
        {
          "command": "natural.file.new.program",
          "group": "1mod@4"
        },
        {
          "command": "natural.file.new.copycode",
          "group": "1mod@5"
        },
        {
          "command": "natural.file.new.lda",
          "group": "2data@1"
        },
        {
          "command": "natural.file.new.pda",
          "group": "2data@2"
        },
        {
          "command": "natural.file.new.gda",
          "group": "2data@3"
        },
        {
          "command": "natural.file.new.testcase",
          "group": "3natunit@1"
        }
      ]
    },
    "grammars": [
      {
        "language": "natural",
        "scopeName": "source.natural",
        "path": "./natural/Natural.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Natural Language Server",
      "properties": {
        "natls.overwrite.java_path": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Path to Java executable to launch the Language Server with instead of the bundled one."
        },
        "natls.overwrite.server_path": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Path to the Language Server jar instead of the bundled one."
        },
        "natls.debug": {
          "type": [
            "boolean"
          ],
          "default": false,
          "description": "Run server in debug mode."
        },
        "natls.debugsuspend": {
          "type": [
            "boolean"
          ],
          "default": false,
          "description": "Suspend the JVM on startup"
        },
        "natls.gutter.body": {
          "type": "boolean",
          "default": true,
          "description": "Indicate main program and subroutine bodies in the Gutter."
        },
        "natls.gutter.topLevelOnly": {
          "type": "boolean",
          "default": true,
          "description": "Only show the gutter for top level statements."
        },
        "natls.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "natls.completion.qualify": {
          "type": "boolean",
          "default": false,
          "description": "Enable this to always fully qualify completed variables where applicable.",
          "scope": "application"
        },
        "natls.completion.inline": {
          "type": "boolean",
          "default": true,
          "description": "Enables inline completion provider",
          "scope": "application"
        },
        "natls.inlayhints.showAssignmentTargetType": {
          "type": "boolean",
          "default": false,
          "description": "Enable this to show inlay hints for the target type of assignments.",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "download-all": "./node_modules/.bin/gulp download-all",
    "clean-server": "./node_modules/.bin/gulp clean-server",
    "download-server": "./node_modules/.bin/gulp download-server",
    "clean-jre": "./node_modules/.bin/gulp clean-jre",
    "download-jre": "./node_modules/.bin/gulp download-jre"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.6",
    "@types/glob": "^8.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.24.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "gulp": "^4.0.2",
    "gulp-decompress": "^3.0.0",
    "gulp-download": "0.0.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock-vscode": "^2.1.0",
    "node-fetch": "^2.6.7",
    "ts-loader": "^9.4.1",
    "ts-jest": "^29.1.1",
    "typescript": "^4.8.4",
    "vsce": "^2.6.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "vscode-test": "^1.6.1",
    "yargs": "^17.6.0"
  }
}
